@import '~stylesheets/common/variables'

.loader
  // background #141313
  position fixed
  height 100vh
  width 100%
  .loader__percent
    color #ffffff
    font-family majesti-medium
    font-size 4.3rem
    left 50%
    opacity 0
    position absolute
    top 45%
    transform translate3D( -50%, -50%, 0)
  .loader__firstline
    background rgba( 255, 255, 255, 0.3 )
    height 1px
    left 0
    margin 0
    position absolute
    top 50%
    width 100%
    transform translate3D( 0, -50%, 0 ) scale3D( 0, 1, 1 )
  .loader__secondline
    background #ffffff
    height 1px
    left 0
    margin 0
    position absolute
    top 50%
    width 100%
    transform translate3D( 0, -100%, 0 ) scale3D( 0, 1, 1 )
    transition transform 0.5s ease-out-expo
